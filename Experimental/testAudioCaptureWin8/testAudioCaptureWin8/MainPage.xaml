<Page
    x:Class="testAudioCaptureWin8.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel>
			<MediaElement Name="playBack" />
			<StackPanel Orientation="Horizontal">
				<ToggleButton Checked="StartRecordingChecked" Unchecked="ToggleButton_Unchecked">
					Toggle to rec
				</ToggleButton>
			</StackPanel>
			<Button Click="RecordForThreeSecondsClick">
				Click to record 3 sec
			</Button>
			<Button Click="RecordForThreeSecondsAndTerminateClick">
				Click to record 3 sec  term after 1
			</Button>
			<Button Click="NavTestClick">
				Test Nav break test
			</Button>
		</StackPanel>
	</Grid>
</Page>
