<phone:PhoneApplicationPage 
    x:Class="Coding4Fun.Toolkit.Test.WindowsPhone.Samples.Buttons.RoundToggleButtons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c4f="clr-namespace:Coding4Fun.Toolkit.Controls;assembly=Coding4Fun.Toolkit.Controls"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480">
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
			<TextBlock x:Name="ApplicationTitle" Text="{StaticResource AppName}" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock x:Name="PageTitle" Text="round toggle buttons" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
			<StackPanel>
				<StackPanel Orientation="Horizontal">
					<c4f:RoundToggleButton
						Click="RoundButtonBasicClick"
						Title="Basic" />
					<c4f:RoundToggleButton
						FontSize="18"
						Title="Coding"
						BorderBrush="CornflowerBlue" />
					<c4f:RoundToggleButton
						Title="4"
						Background="CornflowerBlue" />
					<c4f:RoundToggleButton 
						Foreground="CornflowerBlue"
						Title="Fun" />
					<c4f:RoundToggleButton 
						CheckedBrush="Lavender"
						ImageSource="{Binding RoundButtonImageSource}"
						Title="toggle img" 
						Stretch="None"
						Click="ToggleRoundButtonImageClick" />
					<c4f:RoundToggleButton
						ButtonWidth="100"
						ButtonHeight="100"
						Stretch="None"
						Click="RoundButtonBasicClick"
						Title="Custom Size" />
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<c4f:RoundToggleButton 
						Orientation="Horizontal"
						ImageSource="/Toolkit.Content/ApplicationBar.Cancel.png" 
						Title="horizontal text" />
					<c4f:RoundToggleButton 
						IsChecked="True"
						Orientation="Horizontal"
						ImageSource="/Toolkit.Content/ApplicationBar.Cancel.png" 
						Title="horizontal text" />
					<c4f:RoundToggleButton 
						Padding="24" 
						Title="24 pad" />
				</StackPanel>
				<TextBlock Margin="0, 18, 0, 0">Disabled</TextBlock>
				<StackPanel Name="DisableViewStateTest">
					<StackPanel Orientation="Horizontal">
						<c4f:RoundToggleButton
							IsEnabled="False"
							Click="RoundButtonBasicClick"
							Title="Basic" />
						<c4f:RoundToggleButton
							IsEnabled="False"
							IsChecked="true"
							FontSize="18"
							Title="Coding"
							BorderBrush="CornflowerBlue" />
						<c4f:RoundToggleButton
							IsEnabled="False"
							Title="4"
							Background="CornflowerBlue" />
						<c4f:RoundToggleButton
							IsEnabled="False"
							Foreground="CornflowerBlue"
							Title="Fun" />
						<c4f:RoundToggleButton 
							IsEnabled="False"
							IsChecked="true"
							ImageSource="{Binding RoundButtonImageSource}"
							Title="toggle img" 
							Click="ToggleRoundButtonImageClick" />
						<c4f:RoundToggleButton
							IsEnabled="False"
							ButtonWidth="100"
							ButtonHeight="100"
							Stretch="None"
							Click="RoundButtonBasicClick"
							Title="Custom Size" />
					</StackPanel>
					<Grid>
						<c4f:RoundToggleButton 
							HorizontalAlignment="Left"
							IsEnabled="False"
							Orientation="Horizontal"
							ImageSource="/Toolkit.Content/ApplicationBar.Cancel.png" 
							Title="horizontal text" />
						<toolkit:ToggleSwitch 
							Name="ToggleCheck"
							HorizontalAlignment="Right"
							IsChecked="true" 
							Unchecked="ToggleChecked"
							Checked="ToggleChecked" />
					</Grid>
				</StackPanel>
				<TextBlock Margin="0, 18, 0, 0">System buttons as a base</TextBlock>
				<StackPanel Orientation="Horizontal">
					<ToggleButton
	                    Content="basic" />
					<ToggleButton
		                BorderBrush="CornflowerBlue"
						Background="AliceBlue"
						Foreground="CornflowerBlue">
						clr
					</ToggleButton>
					<ToggleButton
						IsEnabled="False"
						Content="basic" />
					<ToggleButton
						IsEnabled="False"
						BorderBrush="CornflowerBlue"
						Background="AliceBlue"
						Foreground="CornflowerBlue">
						clr
					</ToggleButton>
				</StackPanel>
			</StackPanel>

			<Button 
				Content="Toggle background" 
				VerticalAlignment="Bottom"
				HorizontalAlignment="Right" 
				Click="ToggleBackgroundClick" />
		</Grid>
    </Grid>
</phone:PhoneApplicationPage>
