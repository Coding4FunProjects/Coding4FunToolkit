<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:System="clr-namespace:System;assembly=mscorlib">

	<Style x:Key="AppBarText" TargetType="ContentControl">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
    </Style>
	
	<!-- brushes -->
	<SolidColorBrush x:Key="DefaultAccentBrush" Color="{StaticResource PhoneAccentColor}" />
	<SolidColorBrush x:Key="DefaultChromeBrush" Color="{StaticResource PhoneChromeColor}" />
	<!--<SolidColorBrush x:Key="DefaultBackgroundBrush" Color="{StaticResource PhoneChromeBrush}" />-->
	<SolidColorBrush x:Key="DefaultForegroundBrush" Color="{StaticResource PhoneForegroundColor}" />

	<!-- font sizes -->
	<System:Double x:Key="DefaultFontSizeNormal">20</System:Double> <!--{StaticResource PhoneFontSizeNormal}-->
	
</ResourceDictionary>