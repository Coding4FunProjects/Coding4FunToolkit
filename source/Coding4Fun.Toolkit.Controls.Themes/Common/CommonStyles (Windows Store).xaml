<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	
	<Style x:Key="AppBarText" TargetType="ContentControl">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
    </Style>

	<!-- brushes -->
	<SolidColorBrush x:Key="DefaultAccentBrush" Color="#0050EF" />
	<SolidColorBrush x:Key="DefaultChromeBrush" Color="#1F1F1F" />
	<!--<SolidColorBrush x:Key="DefaultBackgroundBrush" Color="{StaticResource PhoneChromeBrush}" />-->
	<SolidColorBrush x:Key="DefaultForegroundBrush" Color="#FFFFFF" />

	<SolidColorBrush x:Key="DefaultBackgroundDisabledBrush" Color="#6FFF" />
	<SolidColorBrush x:Key="DefaultForegroundDisabledBrush" Color="#1F1F1F" />
	
	<!-- font sizes -->
	<x:Double x:Key="DefaultFontSizeNormal">20</x:Double> <!--{StaticResource PhoneFontSizeNormal}-->

</ResourceDictionary>